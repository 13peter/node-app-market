<style>
  .tabs .indicator{
    display: none;
  }
  .tabs{
    list-style: none;
    padding: 15px 0;
  }
  .tabs li {
    list-style: none;
    text-align: center;
    font-size: 24px;
  }
  .tabs .active {
    display: none;
  }
  .login-wrapper .row {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
</style>

<section class="product-detail section-padding login-wrapper">
                <div class="container">
                    <div class="row">
                      
                      <div class="auth">
  <div class="row">
   

    <div id="login" class="col" style="max-width: 500px; width: 100%">  

     {{#if loginError}}
       <p class="alert">{{loginError}}</p>
     {{/if}}
     <h3 class="h3">Увійти</h3>
     <form action="/auth/login" method="POST">
     <div class="form-floating">
          <input id="email" name="email" type="email" class="validate form-control" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="Введіть email"></span>
        </div>

      <div class="form-floating my-4">
          <input id="password" name="password" type="password" class="validate form-control" required>
          <label for="password">Пароль</label>
          <span class="helper-text" data-error="Введіть пароль"></span>
        </div>  

        <input type="hidden" name="_csrf" value="{{csrf}}"> 

      {{!-- <p><a href="/auth/reset">Забули пароль</a></p> --}}

      <button class="btn custom-btn cart-btn" type="submit">Увійти</button>
  </form>

    </div>


    <div id="register" class="col"  style="max-width: 500px; width: 100%">

     {{#if registerError}}
       <p class="alert">{{registerError}}</p>
     {{/if}}
        <h3 class="h3">Зареєструватись</h3> 
        <form action="/auth/register" method="POST">
      <div class="form-floating">
          <input id="remail" name="email" type="email" class="validate form-control" required>
          <label for="remail">Email</label>
          <span class="helper-text" data-error="Введіть email"></span>
        </div>

      <div class="form-floating my-4">
          <input id="rpassword" name="password" type="password" class="validate form-control" required min="1">
          <label for="rpassword">Пароль</label>
          <span class="helper-text" data-error="Введіть пароль"></span>
        </div>  

      <div class="form-floating my-4">
          <input  id="confirm" name="confirm" type="password" class="validate form-control" required>
          <label for="confirm">Пароль</label>
          <span class="helper-text" data-error="Введіть пароль ще раз"></span>
        </div>

      <div class="form-floating my-4">
          <input  id="name" name="name" type="text" class="validate  form-control" required>
          <label for="name">Ваше ім'я</label>
          <span class="helper-text" data-error="Введіть ім'я"></span>
        </div>
      
        <input type="hidden" name="_csrf" value="{{csrf}}"> 

      <button class="btn custom-btn cart-btn">Зареєструватись</button>
  </form>
 

    </div>


  </div>

  <div class="row">
    <div class="col" style="max-width: 500px; width: 100%">
    <ul class="tabs">
            <li class="tab col s6"><a class="active" href="#login">Увійти</a></li>
            <li class="tab col s6"><a href="#register">Реєстрація</a></li>
        </ul>
    </div>
  </div>
</div>

                    </div>
                </div>
</section>