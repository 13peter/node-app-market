<h1>Курсы</h1>

{{#if courses.length}}
  {{#each courses}}
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card">
          <div class="card-image card-image__box">
            <img src="{{this.img}}" alt="{{this.title}}" class="course-image">
          </div>
          <div class="card-content">
            <span class="card-title">{{this.title}}</span>
            <p class="price">{{this.price}}</p>
          </div>
          <div class="card-action actions" >
            <a href="/courses/{{this.id}}" target="_blank">открыть курс</a>
            {{#if @root.isAuth}}
            <a href="/courses/{{this.id}}/edit?allow = true" >Редактироавть курс</a>
            <form class="form-add" enctype="application/x-www-form-urlencoded">
 
              <input type="hidden" class="csrf" name="_csrf" value="{{@root.csrf}}"> 
              <input type="hidden" class="cid" name="id" value="{{id}}">
              <button type="submit" class="btn btn-primary">купить</button>
            </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>Курсов пока нет</p>
{{/if}}
