  <h1>{{title}}</h1>
  <form action="/add" method="POST">
    <div class="input-field">
          <input id="title" name="title" type="text" class="validate" required>
          <label for="first_name">Назва курсу</label>
          <span class="helper-text" data-error="Введіть назву курсу"></span>
        </div>

      <div class="input-field ">
          <input id="price" name="price" type="text" class="validate" required min="1">
          <label for="price">Ціна курсу   
          </label>
          <span class="helper-text" data-error="Введіть ціну"></span>
        </div>  

      <div class="input-field">
          <input  id="img" name="img" type="text" class="validate" required>
          <label for="img">URL картинки</label>
          <span class="helper-text" data-error="Введіть URL картинки"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}"> 
  
      <button class="btn btn-primarty">Додати курс</button>
  </form>