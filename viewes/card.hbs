<h1>Корзина</h1>

<div id="card">
{{#if courses.length}}
  <table>
    <thead>
      <tr>
        <th>Название</th>
        <th>Количество</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      
      {{#each courses}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button 
          class="btn btm-small js-remove" 
          data-id="{{id}}"
          data-csrf="{{@root.csrf}}"
          >Удалить</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <p><strong>Цена:</strong> <span class="price">{{price}}</span></p>

  <div class="btn-box-cart">
    <form action="/orders" method="POST">
    <input type="hidden" name="_csrf" value="{{csrf}}">   
    <button type="submit" class="btn">Сделать заказ</button>
    </form>

    <button
     type="button" 
     class="js-remove-all btn"
     data-id="{{id}}"
     data-csrf="{{@root.csrf}}"
     >Отчистить корзину</button>
  </div>

  
{{else}}
  <p>Корзина пуста</p>
{{/if}}
</div>